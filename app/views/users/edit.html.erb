<div id="" class="d-flex setting">
    <div class="col_ col_20 setting__menu">
        <div class="setting__title">
            Cài đặt
        </div>
        <ul class="setting__container">
            <li class="setting__active">
                <%= link_to '<i class="fa-solid fa-circle-user setting__icon"></i> Lý Thanh Hùng'.html_safe, edit_user_path(current_user) %>
            </li>
            <li>
                <%= link_to avaUs_path, class: "dropdown-item" do %>
                    <i class="fa-solid fa-image setting__icon"></i>
                    Thay đổi hình ảnh
                <% end %>
            </li>
            <li>
                <%= link_to edit_password_path, class: "dropdown-item" do %>
                    <i class="fa-solid fa-user-lock setting__icon"></i>
                    Thiết lập tài khoản
                <% end %>
            </li>
            <li><a href="#">
                <i class="fa-solid fa-shield setting__icon"></i>
                Bảo mật
            </a></li>
        </ul>
    </div>
    <div class="col_ col_80 setting__content">
        <div class="setting__content-title">
            Cập nhật thông tin cá nhân
        </div>
        <%= form_with(model: @user, local: true) do |f| %>
        <div class="mb-3 row">
            <%= f.label :name, class: "col-sm-2 col-form-label" %>
            <%# <label for="staticEmail" class="col-sm-2 col-form-label">Email</label> %>
            <div class="col-sm-10">
                <%= f.text_field :name, class: 'form-control form-trans' %>
                <%# <input type="text" class="form-control form-trans" id="staticEmail"> %>
            </div>
        </div>
        <div class="mb-3 row">
            <%= f.label :email, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= f.email_field :email, class: 'form-control form-trans' %>
            </div>
        </div>
        
        <div class="mb-3 row">
            <%= f.label :phone, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= f.text_field :phone, class: 'form-control form-trans' %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= f.label :address, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= f.text_field :address, class: 'form-control form-trans' %>
            </div>
        </div>

        <div class="" style="text-align: right;">
            <%= f.submit "Save changes", class: "btn btn-success" %>
        </div>

         <% end %>
    </div>
    
</div>

