<div class="container" style="padding: 20px 0">
  <p style="color: green"><%= notice %></p>

  <h1>Product sizes</h1>

  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Size</th>
        <th scope="col">Quantity_remain</th>
        <th scope="col">Show</th>
      </tr>
    </thead>
    <tbody>
      <% @product_sizes.each do |product_size| %>
      <tr>
        <th scope="row"> <%= product_size.id %> </th>
        <td> <%= product_size.name %> </td>
        <td> <%= product_size.color %> </td>
        <td> <%= product_size.price %> </td>
        <td> <%= product_size.description %> </td>
        <td> <%= product_size.hot %> </td>
        <td> <%= link_to "Show this product", product_size, class: "btn btn-secondary" %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>

    <%= link_to "New product", new_product_size_path, class: "btn btn-primary" %>
</div>