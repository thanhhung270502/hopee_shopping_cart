<div id="<%= dom_id product %>">
    <p>
        <strong>Name:</strong>
        <%= product.name %>
    </p>

    <% if product.image.attached? %>
    <p>
        <strong>Image:</strong>
        <%= image_tag product.image.variant(:display) %>
    </p>
    <% end %>

    <p>
        <strong>color:</strong>
        <%= product.color %>
    </p>

    <p>
        <strong>size:</strong>
        <%= product.sizes.first.name %>
    </p>

    <p>
        <strong>price:</strong>
        <%= product.price %>
    </p>

    <p>
        <strong>description:</strong>   
        <%= product.description %>
    </p>
</div>
