<div class="product__field">
  <div class="product-container">
    <div class="breadcrumbz">
      <div class="d-flex">
        <div class="breadcrumbz__item">
          <a href="/" class="breadcrumbz__link">Home</a>
        </div>
        <span>/</span>
        <div class="breadcrumbz__item">
          <a href="#" class="breadcrumbz__link">Product</a>
        </div>
        <span>/</span>
        <div class="breadcrumbz__item breadcrumbz__item-active">
          <%= @product.name %>
        </div>
      </div>
    </div>
  </div>

  <div class="product-container">
    <div class="d-flex">
      <div class="col_15">
        <div class="product__carousel">
          <% if @product.product_images %>
            <% @product.product_images.each do |image| %>
              <div class="image__left">
                <% if !image.image.url.nil? %>
                  <%= image_tag image.image.url, class: "img-fluid image__small" %>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col_35">
        <div class="product__image-field">
          <% if @product.product_images %>
            <% @product.product_images.each do |image| %>
              <% if !image.image.url.nil? %>
                <div class="image__large">
                    <%= image_tag image.image.url, class: "img-fluid" %>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col_50">
        <div class="product__infor">
          <div class="product__title">
            <%= @product.name %>
          </div>
          <div class="product__star">
            <div class="d-flex">
              <i class="fa-solid fa-star product__star"></i>
              <i class="fa-solid fa-star product__star"></i>
              <i class="fa-solid fa-star product__star"></i>
              <i class="fa-solid fa-star product__star"></i>
              <i class="fa-solid fa-star product__star"></i>
            </div>
          </div>
          <div class="product__price" >
            $<%= @product.price %>.00
          </div>
          <div class="product__status">
            Trạng thái: <span>Còn hàng</span>
          </div>
          <div class="product__number">
            Số lượng: <span>7</span>
          </div>
          <div class="product__description">
            <%= @product.description %>
          </div>
          <div class="product__color">
            <div class="item__title">
              Màu sắc: 
            </div>
            <div class="item__button">
              <button type="button" class="item__btn">Pink</button>
            </div>
          </div>
          <%= form_with url: add_product_path do |form| %>
            <div class="product__size">
              <div class="item__title">
                Size:
              </div>
              <div class="d-flex">
                  <div class="item__button">
                    <div class="input-group">
                      <div class="input-group-text">
                        <%= form.collection_radio_buttons :size_ids, Size.all, :id, :name do |b| %>
                          <% b.label(class: "form-control") {b.radio_button(class: "form-check-input mt-0") + b.text}  %>
                        <% end %>
                      </div>
                    </div>
                  </div>
              </div>
            </div>
            <div class="product__quantity">
                <div class="item__quantity">
                  <%= form.label :quantity %>
                </div>
                <div class="d-flex">
                  <input type="button" value="-" class="btn_quantity">
                  <%= form.text_field :quantity, value: 1, class: "btn_quantity" %>
                  <input type="button" value="+" class="btn_quantity">
                </div>
                <%= form.submit "Add to cart", class: "btn btn-secondary mt-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_importmap_tags("custom/change_quantity") %>
<%= javascript_importmap_tags("custom/show_product") %>