<div class="shop__main">
  <div class="shop__banner">
    <div class="shop__caption">
      <div class="caption__content">
        <div class="caption__title">Shopee</div>
      </div>
    </div>
  </div>
  <div class="shop__menu">
    <div class="container">
      <div class="d-flex navbar-shop">
        <ul class="nav nav-shop">
          <li class="nav-item nav-item-shop">
            <a class="nav-link" aria-current="page" href="#">Dạo</a>
          </li>
          <li class="nav-item nav-item-shop">
            <a class="nav-link nav-active-shop" href="#">Tất cả sản phẩm</a>
          </li>
          <li class="nav-item nav-item-shop">
            <a class="nav-link" href="#">SALE OFF</a>
          </li>
        </ul>
        <div class="search-form">
          <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-primary" type="submit">Search</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="shop__show">
    <div class="site__products">
      <div class="products__title-2">
        <p>TẤT CẢ SẢN PHẨM</p>
        <%= link_to "Thêm sản phẩm" ,new_product_path, class: "btn btn-success" %>
      </div>
      <div class="row pb-3">
        <% @products.each do |product| %>
          <% if product.shop_id == current_shop.id %>
          <div class="col-lg-2 products__column">
            <div class="products__image">
              <%= link_to do %>
                <% if product.image.attached? %>
                  <%= image_tag product.image.variant(:display), class: "img-fluid image" %>
                <% end %>
                <div class="overlay">
                  <div class="other-image">
                    <%= image_tag '1-1-1-3.jpg', class: "img-fluid image" %>
                  </div>  
                </div>
              <% end %>
            </div>
            <%= link_to product_path(product), class: "products__infor" do %>
              <%= content_tag :div, class: "products__name" do %>
                <%= product.name %>
              <% end %>
              <%= content_tag :div, class: "products__price" do %>
                <%= product.price %> đ
              <% end %>
            <% end %>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_importmap_tags("custom/shop") %>