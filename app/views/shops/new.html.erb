<div class="container-sign sign-up">
    <div class="inner-sign-up">
        <h1 class="title">Sign Up!</h1>
        
        <%#= form_with model: @user, url: sign_up_path do |form| %>
        <%= form_with(model: @shop, local: true)  do |form|  %>
        <%#= render 'shared/flash' %>
            <%= render 'shared/error_messages', object: form.object %>
        <div class="form-sign-up">
            <div class="mb-1 row">
                <%# <label for="user_name">Name</label> %>
                 <%= form.label :name %>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-12">
                    <%= form.text_field :name, class: "form-control", placeholder: "Nguyễn Văn A" %>
                </div>
            </div>
            <div class="mb-1 row">
                <%= form.label :description %>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-12">
                    <%= form.text_field :description, class: "form-control", placeholder: "rails@gmail.com" %>
                </div>
            </div>
            <div class="mb-1 row">
                <div class="col-sm-12">
                    <%= form.submit "Create new  account!" , class: "btn btn-secondary max-width btn-border btn-blue-green" %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>