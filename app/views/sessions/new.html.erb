<div class="sign__container">
  <div class="container">
    <div class="row align-items-stretch sign_up_container">
      <div class="col-lg-7 col-md-12" style="padding: 0">
        <div class="sign__form">
          <h2 class="pb-4">Sign In</h2>
          <%= form_with(url: log_in_path, scope: :session, local: true)  do |form| %>
          <div class="form-floating mb-4">
            <%= form.text_field :email, class: "form-control", placeholder: "nguyenvana@gmail.com" %>
            <%= form.label :email %>
          </div>
          <div class="form-floating mb-3">
            <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
            <%= form.label :password %>
          </div>
          <%= form.label :remember_me, class: "checkbox inline mb-3" do %>
            <%= form.check_box :remember_me %>
            <span>Remember me on this computer</span>
          <% end %>            
          <div class="mb-2 row" style="text-align: center;">
              <%#= link_to 'Forgot your password?', new_password_reset_path %>
            <span for="forgot">Forgot your password?</span>
          </div>
          <div class="" style="text-align: center;">
            <%= form.submit "SIGN IN" , class: "submit_btn" %>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-5 col-md-12" style="padding: 0">
        <div class="sign__other d-flex align-items-center flex-column justify-content-center">
          <h1 class="pb-3">Hello, Friend!</h1>
          <p class="pb-3">Enter your personal details and start journey with us</p>
          <%= link_to "SIGN UP", sign_up_path, class: "sign__other_btn" %>
        </div>
      </div>
    </div>
  </div>
</div>